<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.eng.android.teste.views.DragLayer
        android:id="@+id/dragLayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

    </com.example.eng.android.teste.views.DragLayer>

    <com.example.eng.android.teste.views.Draggable
        android:id="@+id/draggable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="75dp" />

    <com.example.eng.android.teste.views.Draggable
        android:id="@+id/draggable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/draggable1"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/draggable1" />

</RelativeLayout>
